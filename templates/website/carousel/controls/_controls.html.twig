{% if count > 1 %}
<div data-glide-el="controls[nav]">
    <button class="arrow-left arrow" data-glide-dir="<">&lt;</button>
    <button class="arrow-right arrow" data-glide-dir=">">&gt;</button>
</div>
<div class="glide__bullets" data-glide-el="controls[nav]">
    {% for i in 0..count - 1 %}
        <button class="glide__bullet" data-glide-dir="={{i}}"></button>
    {% endfor %}
</div>
{% endif %}