{{form_start(form)}}
    <div class="form-group">
        {{ form_label(form.email, 'form.contact.label.email'|trans) }}
        {{ form_widget(form.email, {
            'attr': {
                'class': 'form-control',
                'placeholder': 'form.contact.label.email'|trans,
            }
        }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.subject, 'form.contact.label.subject'|trans) }}
        {{ form_widget(form.subject, {
            'attr': {
                'class': 'form-control',
                'placeholder': 'form.contact.label.subject'|trans,
            }
        }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.body, 'form.contact.label.body'|trans) }}
        {{ form_widget(form.body, {
            'attr': {
                'class': 'form-control',
                'placeholder': 'form.contact.label.body'|trans,
            }
        }) }}
    </div>

    {{ form_widget(form.submit, {
        'label': 'form.send'|trans,
        'attr': {
            'class': 'btn btn-success',
        }
    }) }}
{{form_end(form)}}
