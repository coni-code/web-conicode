{% extends "base.html.twig" %}

{% block body %}
    <nav class="navbar sticky-top navbar-expand-md navbar-color">
        <div class="container-fluid">
            <a href="{{ path('app_home') }}" class="navbar-brand fs-1">
                <img src="{{ asset('build/images/brand/logo.png') }}" alt="Logo" height="100" width="100">
            </a>
            <button class="navbar-toggler collapsed d-flex d-md-none flex-colomn justify-content-around" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="toggler-icon top-bar"></span>
                <span class="toggler-icon middle-bar"></span>
                <span class="toggler-icon bottom-bar"></span>
            </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            {% if app.locale != 'pl' %}
                            <a class="nav-link" href="{{ path('app_language_changer', { '_locale':'pl' }) }}">
                                <i class="fi fi-pl fis fi-lang"></i>
                            </a>
                            {% endif %}
                            {% if app.locale != 'en' %}
                            <a class="nav-link" href="{{ path('app_language_changer', { '_locale':'en' }) }}">
                                <i class="fi fi-gb fis fi-lang"></i>
                            </a>
                            {% endif %}
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-2" href="#">{{'home.navbar.element.home'|trans}}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-2" href="#">{{'home.navbar.element.logo'|trans}}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-2" href="#">{{'home.navbar.element.team'|trans}}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-2" href="#">{{'home.navbar.element.contact'|trans}}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-2" href="#">{{'home.navbar.element.portfolio'|trans}}</a>
                        </li>
                    </ul>
                </div>
        </div>
    </nav>
{% endblock %}


