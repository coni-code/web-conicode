{% extends '/admin/base.html.twig' %}

{% set header = 'admin.meeting.edit_meeting'|trans %}

{% block body %}
    <div class="page">
        <div class="page-header d-flex align-items-center justify-content-between">
            <h1><i class="fa fa-calendar-alt"></i><span class="text-header">{{ header }}</span></h1>

            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item"><a href="{{ path('dev_admin') }}">{{ 'admin.sidebar.link.dashboard'|trans }}</a></li>
                <li class="breadcrumb-item"><a href="{{ path('dev_meeting_index') }}">{{ 'admin.meeting.header.plural'|trans }}</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ header }}</li>
            </ol>
        </div>

        <div class="card">
            <div class="card-header">
                <h4>{{ header }}</h4>
            </div>
            {{ include('admin/meeting/_form.html.twig', {'button_label': 'Update'}) }}
        </div>
    </div>
{% endblock %}
