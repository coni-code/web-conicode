{% extends '/website/base.html.twig' %}
{% block title %}ConiCode Login{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('admin/app') }}
{% endblock %}
{% block body %}
<body class="h-100">
    <div id="particles-js"></div>
    <div class="login-panel">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="d-flex justify-content-between">
                <h1 class="h3 font-weight-normal">Please sign in</h1>
                <img src="{{ asset('build/images/brand/logo.svg') }}" alt="ConiCode">
            </div>
            <div class="form-floating mb-4">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputEmail">Email</label>
            </div>
            <div class="form-floating mb-4">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <label for="inputPassword">Password</label>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="d-flex justify-content-center">
                <button class="btn btn-lg btn-success w-100" type="submit">
                    Sign in
                </button>
            </div>
        </form>
    </div>
</body>
</html>
{% endblock %}
{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    {{ encore_entry_script_tags('particles') }}
    {{ encore_entry_script_tags('admin/app') }}
{% endblock %}
