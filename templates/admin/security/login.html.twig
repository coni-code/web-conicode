<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}ConiCode Login{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('admin/app') }}
    {% endblock %}
</head>
<body class="h-100">
    <div id="particles-js"></div>
    <div class="login-panel">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <img src="{{ asset('build/images/brand/logo-white.png') }}" alt="user avatar" height="200" width="200">

            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            <div class="form-floating mb-4">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputEmail">Email</label>
            </div>
            <div class="form-floating mb-4">
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <label for="inputPassword">Password</label>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="d-flex justify-content-center">
                <button class="btn btn-lg btn-success w-100" type="submit">
                    Sign in
                </button>
            </div>
        </form>
    </div>
</body>
</html>

{% block javascripts %}

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    {{ encore_entry_script_tags('particles') }}
    {{ encore_entry_script_tags('admin/app') }}
{% endblock %}
